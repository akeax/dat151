Prog. Program ::= [Def];
Def.  Def     ::= Ident [Ident] "=" Exp;
terminator Def ";";
terminator Ident "";

-- Pure lambda calculus
EVar. Exp3 ::= Ident;
EApp. Exp2 ::= Exp2 Exp3;
EAbs. Exp  ::= "\\" Ident "->" Exp;

-- Convenient extensions
EInt. Exp3 ::= Integer;
EAdd. Exp1 ::= Exp1 "+" Exp2;
ESub. Exp1 ::= Exp1 "-" Exp2;
ELt.  Exp1 ::= Exp1 "<" Exp2;
EIf.  Exp  ::= "if" Exp1 "then" Exp1 "else" Exp;

coercions Exp 3;
comment "--";
